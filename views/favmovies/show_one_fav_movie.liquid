{% layout 'layout.liquid' %}
{% block content %}
<div class="container-md">
    <article>

        <h1>{{favmovie.title}}</h1>
        <div class="card" style="width: 25rem">
            <div class="card-body">
                <img src="{{favmovie.posterImg}}" class="col-sm-5 " alt="">
                <h5>Released: {{favmovie.year}}</h5>
                <p class="card-header"><a href="https://www.imdb.com/title/{{favmovie.imdbId}}/" class="btn btn-info"
                        target="_blank">IMDB Page for {{favmovie.title}}</a></p>
           
            <p class="card-text">
            <form action="/favmovies/{{favmovie._id}}?_method=DELETE" method="POST">
                <input type="submit" value="Delete?" class="btn btn-danger">
            </form>
            </p>
        </div>
        </div>
    </article>

    <div class="col-md-6">
        <form action="/comments/{{favmovie._id}}" method="POST">
            <fieldset>
                <legend>Add comment</legend>
                <label class="form-label">Comment: </label>
                <input type="text" class="form-control" name="note" placeholder="Comment" />
            </fieldset>
            <input type="submit" class="btn btn-info" value="Add Movie Review" />
        </form>
    </div>
    {% if result.comments.length > 0 %}
    <div class="container-sm justify-content-center">
        <div class="col-md-8 col-lg-6">
            {% for comment in result.comments %}
            {% render '../comment.liquid' comment: comment, userId: userId, result: result, username: username%}
            {% endfor %}
        </div>
    </div>
    {% endif %}

</div>
{% endblock %}