{% layout 'layout.liquid' %}
{% block content %}
<div class="container-md">
    <article>

        <h2>{{movie.name}}</h2>
        <h3>
            {% if movie.readyToEat %}
            Ripe and ready to eat
            {% else %}
            Not ripe, wait to eat it
            {% endif %}
        </h3>
        <h4>Color: {{movie.color}}</h4>
        <div class="btn-group">

            <a href="/movies/{{movie._id}}/edit" class="btn btn-primary">Edit Movie</a>
            <form action="/movies/{{movie._id}}?_method=DELETE" method="POST">
                <input type="submit" value="Delete" class="btn btn-danger">
            </form>
        </div>
    </article>
    <div class="col-md-6">
        <form action="/comments/{{movie._id}}" method="POST">
            <fieldset>
                <legend>Add comment</legend>
                <label class="form-label">Comment: </label>
                <input type="text" class="form-control" name="note" placeholder="Enter comment here" />
            </fieldset>
            <input type="submit" class="btn btn-success" value="Add comment" />
        </form>
    </div>
    {% if movie.comments.length > 0 %}
    <div class="container-sm justify-content-center">
        <div class="col-md-8 col-lg-6">
            {% for comment in movie.comments %}
            {% render '../comment.liquid' comment: comment, userId: userId, movie: movie, username: username%}
            {% endfor %}
        </div>
    </div>
    {% endif %}
</div>
{% endblock %}